{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "airbnb-typescript",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": true
    },
    "node": {
      "allowModules": [
        "@react-three/drei",
        "@react-three/fiber",
        "three"
      ]
    }
  },
  "rules": {
    "import/no-extraneous-dependencies": "off"
  }
}
